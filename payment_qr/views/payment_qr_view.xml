<?xml version="1.0"?>
<odoo>
    <data>
        <record id="account_payment_form_qr_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.qr.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']" position="inside">
                    <group>
                        <field name="qr_code" attrs="{'invisible': [('qr_code', '=', False)]}"/>
                        <div attrs="{'invisible': [('qr_code', '!=', False)]}">
                            <field name="qr_code" widget="html"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

